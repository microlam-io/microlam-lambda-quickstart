<archetype-descriptor
        xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0 https://maven.apache.org/xsd/archetype-descriptor-1.1.0.xsd"
        name="microlam-lambda-quickstart">

  <requiredProperties>
    <requiredProperty key="lambdaName">
    </requiredProperty>
    <requiredProperty key="awsProfile">
    </requiredProperty>
    <requiredProperty key="awsRegion">
    </requiredProperty>
    <requiredProperty key="awsBucket">
    </requiredProperty>
  </requiredProperties>

    <fileSets>
        <fileSet filtered="true" packaged="true">
            <directory>src/main/java</directory>
        </fileSet>
        <fileSet filtered="true">
            <directory>src/main/resources</directory>
        </fileSet>
        <fileSet filtered="true" packaged="true">
            <directory>src/test/java</directory>
        </fileSet>
        <fileSet filtered="true">
            <directory>src/test/resources</directory>
        </fileSet>
        <fileSet filtered="true">
            <directory/>
            <includes>
              <include>bootstrap</include>
 			  <include>README.md</include>
			  <include>samconfig.toml</include>
			  <include>template.yaml</include>
            </includes>
        </fileSet>
    </fileSets>

</archetype-descriptor>


